<% if obj.errors.any? -%>
    <div class="row">
        <div class="card w-100 bg-danger text-center">
            <div class="card-header">Error</div>
                <div class="card-title">
                    <%= pluralize(obj.errors.count, "error") -%>
                    prohibited this from getting saved: 
                </div>
                <div class="card-body">
                    <ul>
                        <% obj.errors.full_messages.each do |message| -%>
                            <li><%= message -%></li>
                        <% end -%>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% end -%>