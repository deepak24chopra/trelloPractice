<div class="row">
    <div class="offset-1 col-10">
        <% flash.each do |name,msg| -%>
            <div class='alert alert-<%= "#{name}" -%>'>
                <a herf="#" class="close" data-dismiss="alert">&#215;</a>
                <%= content_tag :div,msg,:id => "flash_#{name}" if msg.is_a? (String) -%>
            </div>
        <% end -%>
    </div>
</div>